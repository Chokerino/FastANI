CXXFLAGS += -O3 -DNDEBUG -std=c++11 -Isrc -I @mathinc@
CPPFLAGS += @amcppflags@

UNAME_S=$(shell uname -s)

ifeq ($(UNAME_S),Darwin)
	CXXFLAGS += -mmacosx-version-min=10.7 -stdlib=libc++
else
	CXXFLAGS += -include src/common/memcpyLink.h -Wl,--wrap=memcpy
	CFLAGS += -include src/common/memcpyLink.h
endif

SOURCE1=src/cgi/core_genome_identity.cpp
SOURCE2=src/cgi_amino/amino_acid_identity.cpp

all : fastANI fastAAI

fastANI :  
	$(CXX) $(CXXFLAGS) $(CPPFLAGS) $(SOURCE1) -o fastANI @mathlib@ -lstdc++ -lz -lm  

fastAAI :  
	$(CXX) $(CXXFLAGS) $(CPPFLAGS) $(SOURCE2) -o fastAAI @mathlib@ -lstdc++ -lz -lm  

install : fastANI
	mkdir -p @prefix@/bin/
	cp `pwd`/fastANI @prefix@/bin/

clean :
	-rm -f fastANI
	-rm -f fastAAI
